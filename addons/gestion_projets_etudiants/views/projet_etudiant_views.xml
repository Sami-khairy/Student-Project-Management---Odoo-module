<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="view_student_project_search" model="ir.ui.view">
        <field name="name">student.project.search</field>
        <field name="model">student.project</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="student_ids"/>
                <field name="supervisor_id"/>
                <field name="project_type"/>

                <filter string="Mes Projets" name="my_projects" domain="[('student_ids', 'in', uid)]"/>
                <filter string="PFE Uniquement" name="pfe_only" domain="[('project_type', '=', 'pfe')]"/>
                <filter string="Projets non notés" name="not_graded" domain="[('grade', '=', 0), ('state', '=', 'done')]"/>
                
                <group expand="1" string="Regrouper par">
                    <filter string="Tuteur" name="groupby_supervisor" context="{'group_by':'supervisor_id'}"/>
                    <filter string="État" name="groupby_state" context="{'group_by':'state'}"/>
                    <filter string="Type" name="groupby_type" context="{'group_by':'project_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- KANBAN VIEW -->
    <record id="view_student_project_kanban" model="ir.ui.view">
        <field name="name">student.project.kanban</field>
        <field name="model">student.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" on_create="quick_create">
                <field name="name"/>
                <field name="student_ids"/>
                <field name="grade"/>
                <field name="project_type"/>
                <field name="state"/>
                <field name="id"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                
                                <div>
                                    <field name="student_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>

                                <div class="o_kanban_record_bottom mt-2">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                        <field name="project_type" widget="label_selection"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-if="record.grade.raw_value > 0" class="badge rounded-pill text-bg-success">
                                            <field name="grade"/>/20
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_student_project_tree" model="ir.ui.view">
        <field name="name">student.project.tree</field>
        <field name="model">student.project</field>
        <field name="arch" type="xml">
            <tree decoration-danger="date_deadline &lt; current_date and state != 'done'" 
                  decoration-success="state == 'done'" 
                  decoration-info="state == 'in_progress'">
                <field name="name"/>
                <field name="student_ids" widget="many2many_tags"/>
                <field name="supervisor_id"/>
                <field name="project_type"/>
                <field name="date_deadline"/>
                <field name="grade" optional="show"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'done'" 
                       decoration-info="state == 'in_progress'"
                       decoration-warning="state == 'submitted'"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_student_project_form" model="ir.ui.view">
        <field name="name">student.project.form</field>
        <field name="model">student.project</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_validate" string="Valider" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_in_progress" string="Commencer" type="object" class="oe_highlight" invisible="state != 'validation'"/>
                    <button name="action_submit" string="Rendre le Projet" type="object" class="oe_highlight" invisible="state != 'in_progress'"/>
                    <button name="action_done" string="Noter &amp; Clôturer" type="object" class="oe_highlight" invisible="state != 'submitted'"/>
                    <button name="action_draft" string="Remettre en Brouillon" type="object" invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validation,in_progress,submitted,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Titre du Projet"/>
                        <h1>
                            <field name="name" placeholder="Ex: Mise en place d'un Pipeline DevOps..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_ids" widget="many2many_tags"/>
                            <field name="supervisor_id"/>
                            <field name="project_type"/>
                        </group>
                        <group>
                            <field name="date_deadline"/>
                            <field name="repository_url" widget="url"/>
                            <field name="grade"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description &amp; Détails">
                            <field name="description" placeholder="Détails du sujet, contraintes techniques..."/>
                        </page>
                    </notebook>
                </sheet>
                <!-- CHATTER -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ACTIONS -->
    <record id="action_student_project" model="ir.actions.act_window">
        <field name="name">Projets Étudiants</field>
        <field name="res_model">student.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez le premier projet étudiant !
            </p>
        </field>
    </record>

    <!-- MENUS -->
    <menuitem id="menu_school_root" name="Student Project" sequence="10"/>

    <menuitem id="menu_student_projects"
              name="Mes Projets"
              parent="menu_school_root"
              action="action_student_project"
              sequence="10"/>

</odoo>